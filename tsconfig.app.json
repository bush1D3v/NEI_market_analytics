{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"app/**/*",
		"app/**/*.vue",
		"tests/**/*",
		"stories/**/*",
		"mocks/**/*",
		"app/locales",
		"tailwind.config.js"
	],
	"exclude": ["app/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"baseUrl": ".",
		"paths": {
			"@/*": ["app/*"]
		}
	}
}
